@model Ofis_ISE309.Models.EntityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        
        <div class="container">
            <h2>Lütfen Giriş Yapınız</h2>
            @ViewBag.Mesaj
            @using (Html.BeginForm("Login", "Security", FormMethod.Post))
            {
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">Login</h3>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Ad)<br>

                                    @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholde = "Kullanıcı Adı" })

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Sifre)<br>

                                    @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", placeholde = "Parola" })

                                </div>
                                <div class="form-group">
                                    <label for="remember-me" class="text-info"><span>Beni Hatırla</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                    <input type="submit" name="submit" class="btn btn-info btn-success" value="Kayıt Ol">
                                </div>
                                <div id="register-link" class="text-right">
                                    <a href="#" class="text-info">Giriş</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>
        </div>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </body>
    </html>
